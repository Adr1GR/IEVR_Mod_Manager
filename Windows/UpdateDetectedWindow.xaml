<Window x:Class="IEVRModManager.Windows.UpdateDetectedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game update detected"
        Height="240" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   x:Name="TitleText"
                   Text="Game update detected"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1"
                   x:Name="MessageText"
                   TextWrapping="Wrap"
                   Foreground="{StaticResource TextBrush}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="CreateBackupButton"
                    Content="Create Backup"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="140"
                    Margin="0,0,8,0"
                    Click="CreateBackup_Click"/>
            <Button x:Name="CloseButton"
                    Content="Close"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="100"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>

