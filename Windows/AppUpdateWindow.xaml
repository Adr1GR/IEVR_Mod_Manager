<Window x:Class="IEVRModManager.Windows.AppUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App Update"
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgBrush}"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   x:Name="TitleText"
                   Text="Update Available"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextBrush}"
                   Margin="0,0,0,16"/>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,16">
            <StackPanel>
                <TextBlock x:Name="MessageText"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource TextBrush}"
                           Margin="0,0,0,12"/>
                
                <TextBlock x:Name="ReleaseNotesText"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource TextBrush}"
                           FontSize="11"
                           Margin="0,8,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>

        <ProgressBar x:Name="ProgressBar"
                     Grid.Row="2"
                     Height="20"
                     Margin="0,0,0,12"
                     Visibility="Collapsed"/>

        <TextBlock x:Name="ProgressText"
                   Grid.Row="3"
                   TextWrapping="Wrap"
                   Foreground="{StaticResource TextBrush}"
                   FontSize="11"
                   Margin="0,0,0,16"
                   Visibility="Collapsed"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="DownloadButton"
                    Content="Download and Install"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="180"
                    Margin="0,0,8,0"
                    Click="DownloadButton_Click"/>
            <Button x:Name="OpenReleasesButton"
                    Content="Open Releases Page"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="160"
                    Margin="0,0,8,0"
                    Click="OpenReleasesButton_Click"/>
            <Button x:Name="LaterButton"
                    Content="Later"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="100"
                    Click="LaterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
